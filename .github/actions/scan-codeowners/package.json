{
  "name": "codeowners-scanner-action",
  "version": "0.0.0",
  "private": true,
  "description": "scans PRs for files that are not covered by codeowners",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build && ncc build --source-map --license licenses.txt && npm run copy:templates:dist",
    "copy:templates:dist": "mkdir -p dist/templates && cp src/templates/* dist/templates/",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.3",
    "@octokit/webhooks-definitions": "^3.67.3",
    "handlebars": "^4.7.7",
    "ignore": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.6",
    "@typescript-eslint/parser": "^5.33.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.22.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^26.8.3",
    "jest": "^28.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  }
}
